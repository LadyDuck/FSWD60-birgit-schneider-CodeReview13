{% extends 'base.html.twig' %}

{% block body %}
    <h1>Events list</h1>


     <div class="row">

    {% for event in events %}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">

            <img class="bd-placeholder-img card-img-top" width="100%" height="350" src="{{ event.image }}">
      
            <div class="card-body">
                <h5 class="card-title">{{ event.name }}</h5>
              <p class="card-text">{{ event.startDate|date('Y-m-d H:i:s') }}</p>
                <p>{{ event.contact }}</p>
                <p><strong>Eventtype: </strong> {{event.eventType}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="{{ path('event_show', { 'id': event.id }) }}">view</a></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="{{ path('event_edit', { 'id': event.id }) }}">edit</a></button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
     {% endfor %}


{% endblock %}

