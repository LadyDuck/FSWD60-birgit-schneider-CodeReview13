{% extends 'base.html.twig' %}

{% block body %}
    <h1 class = "text-center mb-4 text-danger">Events in Vienna</h1>


     <div class="row">

    {% for event in events %}
        <div class="col-lg-4 col-md-6">
          <div class="card mb-4 shadow-sm">

            <img class="bd-placeholder-img card-img-top" src="{{ event.image }}">
      
            <div class="card-body">
                <h5 class="card-title text-danger">{{ event.name }}</h5>
              <p class="card-text"><strong>{{ event.startDate|date('D. d. M. Y') }} at {{ event.startDate|date('H:i') }}</strong></p>
                <p>{{ event.contact }}</p>
                <p><strong>Eventtype: </strong> {{event.eventType}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="{{ path('event_show', { 'id': event.id }) }}">view</a></button>
                  <button type="button" class="btn btn-sm btn-outline-secondary"><a href="{{ path('event_edit', { 'id': event.id }) }}">edit</a></button>
                </div>
              </div>
            </div>
          </div>
        </div>
     {% endfor %}
         
        

{% endblock %}
         
{% block stylesheets %}

                
{% endblock %}
